{% doc %}
  @prompt
    A block with a single centered image on a transparent background. The image can take up to 25% of screen on desktop, and 80% mobile (orders of magnitude, you pick what feels right in responsive web design). 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-centered-image-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: transparent;
  }

  .ai-centered-image__wrapper-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.max_width_mobile }}%;
    height: auto;
  }

  .ai-centered-image__img-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-centered-image__placeholder-{{ ai_gen_id }} {
    width: 100%;
    background-color: #f4f4f4;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    min-height: 200px;
  }

  .ai-centered-image__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-centered-image__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (min-width: 750px) {
    .ai-centered-image__wrapper-{{ ai_gen_id }} {
      max-width: {{ block.settings.max_width_desktop }}%;
    }
  }
{% endstyle %}

<div class="ai-centered-image-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-centered-image__wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 2000 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        class="ai-centered-image__img-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-centered-image__placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-centered-image__empty-state-{{ ai_gen_id }}">
          {{ 'blocks.centered_image.add_image' | t }}
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Centered image",
  "tag": null,
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "max_width_desktop",
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Maximum width on desktop",
      "default": 25
    },
    {
      "type": "range",
      "id": "max_width_mobile",
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Maximum width on mobile",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Centered image"
    }
  ]
}
{% endschema %}
