{% doc %}
  @prompt
    An editorial section called "What We Curate" with 4 sections, with each one icon or image. Ideally on desktop all 4 are side by side, then if space doesn't allow only 2. 
    
    Text to introduce the section: 
    "Each category is chosen with care, celebrating quality and the joy of discovery."
    
    Sections:
    
    [Section 1]
    Apparel
    Thoughtfully made pieces for everyday comfort and play.
    [/Section 1]
    
    [Section 2]
    Toys & Play Objects
    Items that inspire imagination and slow, meaningful play.
    [/Section 2]
    
    [Section 3]
    Books 
    Stories, prints, and keepsakes for growing minds.
    [/Section 3]
    
    [Section 4]
    Gifts
    Meaningful treasures to mark childhood's little moments.
    [/Section 4]
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-curate-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-curate-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-curate-intro-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.intro_spacing }}px;
  }

  .ai-curate-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    font-weight: 600;
  }

  .ai-curate-intro-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.intro_text_size }}px;
    color: {{ block.settings.intro_text_color }};
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .ai-curate-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-curate-item-{{ ai_gen_id }} {
    text-align: center;
    padding: {{ block.settings.item_padding }}px;
    background-color: {{ block.settings.item_background }};
    border-radius: {{ block.settings.item_border_radius }}px;
    transition: transform 0.3s ease;
  }

  .ai-curate-item-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
  }

  .ai-curate-icon-wrapper-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    margin: 0 auto {{ block.settings.icon_spacing }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-curate-icon-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .ai-curate-icon-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.icon_placeholder_bg }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-curate-icon-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-curate-item-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.item_title_size }}px;
    color: {{ block.settings.item_title_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px;
    font-weight: 600;
  }

  .ai-curate-item-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.item_description_size }}px;
    color: {{ block.settings.item_description_color }};
    line-height: 1.5;
    margin: 0;
  }

  @media screen and (max-width: 989px) {
    .ai-curate-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }

    .ai-curate-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.85);
    }

    .ai-curate-intro-text-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.intro_text_size }}px * 0.9);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-curate-section-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.7 }}px 0 {{ block.settings.section_padding_bottom | times: 0.7 }}px;
    }

    .ai-curate-icon-wrapper-{{ ai_gen_id }} {
      width: calc({{ block.settings.icon_size }}px * 0.8);
      height: calc({{ block.settings.icon_size }}px * 0.8);
    }

    .ai-curate-item-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.item_title_size }}px * 0.9);
    }

    .ai-curate-item-description-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.item_description_size }}px * 0.9);
    }
  }
{% endstyle %}

<div class="ai-curate-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-curate-container-{{ ai_gen_id }}">
    {% if block.settings.section_heading != blank %}
      <div class="ai-curate-intro-{{ ai_gen_id }}">
        <h2 class="ai-curate-heading-{{ ai_gen_id }}">{{ block.settings.section_heading }}</h2>
        {% if block.settings.intro_text != blank %}
          <p class="ai-curate-intro-text-{{ ai_gen_id }}">{{ block.settings.intro_text }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-curate-grid-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign title_key = 'item_' | append: i | append: '_title'
          assign description_key = 'item_' | append: i | append: '_description'
          assign image_key = 'item_' | append: i | append: '_image'
          
          assign item_title = block.settings[title_key]
          assign item_description = block.settings[description_key]
          assign item_image = block.settings[image_key]
        %}

        <div class="ai-curate-item-{{ ai_gen_id }}">
          <div class="ai-curate-icon-wrapper-{{ ai_gen_id }}">
            {% if item_image %}
              <img
                src="{{ item_image | image_url: width: 200 }}"
                alt="{{ item_title | escape }}"
                loading="lazy"
                width="200"
                height="200"
              >
            {% else %}
              <div class="ai-curate-icon-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>

          {% if item_title != blank %}
            <h3 class="ai-curate-item-title-{{ ai_gen_id }}">{{ item_title }}</h3>
          {% endif %}

          {% if item_description != blank %}
            <p class="ai-curate-item-description-{{ ai_gen_id }}">{{ item_description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

